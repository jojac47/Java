         <children>
            <Button mnemonicParsing="false" onAction="#addPatientBTTN" text="Add Patient" />
            <Button mnemonicParsing="false" onAction="#ModifyPatient" text="Modify Patient" />
            <Button mnemonicParsing="false" onAction="#pDeleteBTTN" text="Delete Patient " />
            <Button mnemonicParsing="false" onAction="#pBackBTTN" text="Back" />
         </children>
      </HBox>
   </children>
</AnchorPane>
